{ "dfe": [
    {
      "name": "root",
      "type": "div",
      "_get": "[$$]",
      "attributes" : "{ style: 'display: flex; flex-flow : row wrap; margin: 50px; width: 500px; justify-content: space-around' }"
    },
    {
      "name": "edit",
      "parent": "root", 
      "type": "editbox",
      "_get": "$$('.somevalue')",
      "_set": "$$.set('.somevalue', value)",
      "validation": "required($$, '.somevalue')",
      "attributes" : "{ vstrategy: 'notified' }"
    },
    {
      "name": "edit-p",
      "parent": "root", 
      "type": "editbox-P",
      "_get": "$$('.somevalue')",
      "_set": "$$.set('.somevalue', value)",
      "validation": "required($$, '.somevalue')",
      "attributes" : "{ vstrategy: 'notified',  ta : {eclass : 'editbox-error', class: 'popup-editor-wrapper'} }"
    } 
  ]
 }