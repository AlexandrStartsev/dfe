{
  "dfe": [
    {
      "name": "root",
      "type": "div",
      "_get": "$$('.policy')",
      "attributes": "{ style: 'display: flex; flex-flow : row wrap;' }"
    },
    {
      "name": "field-1",
      "type": "checkbox",
      "_get": "{ checked: $$('.someflag'), text: 'Abc'}",
      "parent": "root",
      "_set": "$$.set('.someflag', value)"
    },
    {
      "name": "field-2",
      "type": "radiolist",
      "_get": "{ value : $$('.someflag'), items : [ {value :'Y', description : 'Yes'}, {value :'N', description : 'No'}]}",
      "parent": "root",
      "attributes": "{orientation : 'horizontal'}",
      "_set": "$$.set('.someflag', value)"
    }
  ]
}